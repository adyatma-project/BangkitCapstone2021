<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backtitik">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".View_Ibu.SignupIbuActivity">

        <TextView
            android:id="@+id/textwelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/mo_li"
            android:text="Selamat Datang"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/mo_li"
            android:text="STOP GLOBAL PANDEMIC TROUGH
SEHAT-KU APP"
            android:textColor="@android:color/background_dark"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/loginconcept"
            app:layout_constraintStart_toStartOf="@id/textwelcome"
            app:layout_constraintTop_toBottomOf="@id/textwelcome" />

        <ImageView
            android:id="@+id/loginconcept"
            android:layout_width="177dp"
            android:layout_height="225dp"
            android:background="@drawable/doctorgesture"
            android:padding="2dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/mo_li"
            android:text="Silahkan Daftar Terlebih Dahulu"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginconcept" />

        <HorizontalScrollView
            android:id="@+id/hori1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_start_ibu"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shape_start"
                    android:padding="12dp"
                    android:src="@drawable/logo"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtibu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/mo_me"
                    android:text="UMUM"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@id/img_start_ibu"
                    app:layout_constraintEnd_toEndOf="@id/img_start_ibu"
                    app:layout_constraintTop_toBottomOf="@id/img_start_ibu" />


                <ImageView
                    android:id="@+id/img_start_bidan"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/shape_start"
                    android:padding="12dp"
                    android:src="@drawable/doctorgesture"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/img_start_ibu"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txtbidan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/mo_me"
                    android:text="NAKES"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@id/img_start_bidan"
                    app:layout_constraintEnd_toEndOf="@id/img_start_bidan"
                    app:layout_constraintTop_toBottomOf="@id/img_start_bidan" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/mo_li"
            android:text="Sudah Punya Akun ?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hori1" />

        <Button
            android:id="@+id/btnmasukstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:text="Silahkan Masuk"
            android:padding="20dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>